<% content_for :page_title, "New post" %>
<%= render :partial => "shared/simple_tiny_mce" %>
<% form_for(@object) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :parent_type %>
  <fieldset>
    <legend>Post Details</legend>
    <div>
      <%= f.label :title, nil, {:class => 'required'} %><br />
      <%= f.text_field :title, :disabled => @object.title.eql?('administrator') %>
    </div>
    <div>
      <%= f.label :description, nil, {:class => 'required'} %><br />
      <%= f.text_area :description, :class => "mceNoEditor small" %>
    </div>
    <div>
      <%= f.label :content, nil, {:class => 'required'} %><br />
      <%= f.text_area :content, :class => "mceEditor" %>
    </div>
    <div>
      <%= f.submit(submit_label(@object)) %>
    </div>
  </fieldset>
<% end %>
