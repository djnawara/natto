.column.float_left
  - form_tag :action => 'create' do
    %fieldset
      %legend Log In
      %fieldset
        %legend OpenID
        %div
          %label{:for => "openid_url"} OpenID URL
          = text_field_tag 'openid_url', params[:identity_url]
      .center.small or&hellip;
      %fieldset
        %legend Traditional
        %div
          %label{:for => "login"} Login
          = text_field_tag 'login', @login
        %div
          %label{:for => "password"} Password
          = password_field_tag 'password', nil
        %div
          %label{:for => "remember_me"} Remember me
          = check_box_tag 'remember_me', '1', @remember_me
    %div= submit_tag 'Log in'
    %p= link_to "Forgot your password?", forgot_password_path
.column.float_right
  %h2 Not a member?
  %p= link_to "Register an account!", signup_path
.clear
