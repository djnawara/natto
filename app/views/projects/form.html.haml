- content_for :page_title, "New portfolio project"
- form_for(@object) do |f|
  = f.error_messages
  %fieldset
    %legend Project Details
    %div
      = f.label :client, nil, {:class => 'required'}
      = f.text_field :client
    %div
      = f.label :title, nil, {:class => 'required'}
      = f.text_field :title
    %div
      = f.label :website, nil, {:class => 'required'}
      = f.text_field :website
    %div
      = f.label :description
      = f.text_area :description, :class => "mceNoEditor small"
    %div= f.submit(submit_label(@object))
